<?xml version="1.0"?>
<!--
Require-Bundle:
 org.eclipse.emf.mwe.core;bundle-version="0.7.0",
 org.eclipse.emf.mwe.utils;bundle-version="0.7.0",
 org.eclipse.xpand;bundle-version="0.7.0",
 org.eclipse.emf.ecore.xmi;bundle-version="2.5.0",
 org.eclipse.xtend;bundle-version="0.7.0",
 org.eclipse.xtend.typesystem.emf;bundle-version="0.7.0",
 com.ibm.icu;bundle-version="4.0.1",
 org.antlr.runtime;bundle-version="3.0.0" 
 -->
 
<workflow>
	<property name="source" value="platform:/resource/de.cau.cs.kieler.example.oaw.gen/My.mymodel" />
	<property name="target" value="src-gen/generated.simple" />

	<!-- set up EMF for standalone execution -->
	<bean class="org.eclipse.emf.mwe.utils.StandaloneSetup" >
		<registerGeneratedEPackage value="simple.SimplePackage" />
		<registerGeneratedEPackage value="mymodel.MymodelPackage" />
		<platformUri value=".."/>
	</bean>
	
	<!-- load model and store it in slot 'source' -->
	<component class="org.eclipse.emf.mwe.utils.Reader">
	    <uri value="${source}" />
		<modelSlot value="source" />
	</component>
	
	
	<!-- perform transformation -->
	<component class="org.eclipse.xtend.XtendComponent">
		<metaModel id="mm"
			class="org.eclipse.xtend.typesystem.emf.EmfRegistryMetaModel"/>
		<invoke value="M2MtransformationInplace::transform(source)" />
	</component>

	<!-- store model -->  
	<component class="org.eclipse.emf.mwe.utils.Writer">
		<uri value="${source}" />
		<modelSlot value="source"/>
	</component>

</workflow>
