module BitAlarm:
input B, S, SX, ACI;
output ACO;
signal SMEM, SMEM1 in
loop
  present SMEM then pause; emit SMEM1 else pause end
end loop
||
loop
  present S then
    present SX then emit SMEM end 
  else
    present SMEM1 then emit SMEM end
  end;
  present [ ACI and (SMEM and B or not SMEM and not B) ] then emit ACO end;
pause;
end loop

end signal
end module
