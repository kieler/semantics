<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.newWizards">
      <wizard
            category="de.cau.cs.kieler.prom.ui.kielerModelingWizards"
            class="de.cau.cs.kieler.sccharts.prom.SCChartsProjectWizard"
            finalPerspective="de.cau.cs.kieler.Modeling"
            hasPages="true"
            icon="icons/foerde-logo-16.png"
            id="de.cau.cs.kieler.sccharts.prom.scchartsProject"
            name="SCCharts Project"
            project="true">
         <description>
            Create a new SCCharts project.
         </description>
      </wizard>
      <wizard
            canFinishEarly="false"
            category="de.cau.cs.kieler.prom.ui.kielerModelingWizards"
            class="de.cau.cs.kieler.sccharts.prom.SctxFileWizard"
            finalPerspective="de.cau.cs.kieler.Modeling"
            hasPages="true"
            icon="icons/sccharts_icon16.png"
            id="de.cau.cs.kieler.sccharts.prom.sctxWizard"
            name="SCTX File"
            project="false">
         <description>
            Create a new SCCharts Text file.
         </description>
      </wizard>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="de.cau.cs.kieler.Modeling">
         <newWizardShortcut
               id="de.cau.cs.kieler.sccharts.prom.scchartsProject">
         </newWizardShortcut>
         <newWizardShortcut
               id="de.cau.cs.kieler.sccharts.prom.sctxWizard">
         </newWizardShortcut>
      </perspectiveExtension>
      <perspectiveExtension
            targetID="de.cau.cs.kieler.simulation">
         <newWizardShortcut
               id="de.cau.cs.kieler.sccharts.prom.scchartsProject">
         </newWizardShortcut>
         <newWizardShortcut
               id="de.cau.cs.kieler.sccharts.prom.sctxWizard">
         </newWizardShortcut>
      </perspectiveExtension>
   </extension>

</plugin>
