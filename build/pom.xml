            <version>0.0.1-SNAPSHOT</version>
          </docletArtifact>
          <useStandardDocletOptions>false</useStandardDocletOptions>
          <additionalJOption>-p semantics -d ./rating</additionalJOption>
          <excludedocfilessubdir>xtend-gen</excludedocfilessubdir>
        </configuration>

