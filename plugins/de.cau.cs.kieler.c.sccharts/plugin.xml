<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension-point id="editor" name="editor" schema="schema/editor.exsd"/>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="de.cau.cs.kieler.c.sccharts.handler.CFileTransformHandler"
            commandId="de.cau.cs.kieler.c.sccharts.commands.TransformC">
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="popup:org.eclipse.ui.popup.any?after=additions">
         <command
               commandId="de.cau.cs.kieler.c.sccharts.commands.TransformC"
               label="Transform C File"
               mnemonic="T"
               style="push">
            <visibleWhen>
               <iterate
                     ifEmpty="false"
                     operator="or">
                  <adapt
                        type="org.eclipse.core.resources.IFile">
                     <test
                           forcePluginActivation="true"
                           property="org.eclipse.core.resources.extension"
                           value="c">
                     </test>
                  </adapt>
               </iterate>
            </visibleWhen>
         </command>
      </menuContribution>
   </extension>
   <extension
         point="de.cau.cs.kieler.klighd.ui.view.editor">
      <editor
            controllerID="de.cau.cs.kieler.c.sccharts.controller.CDTUpdateController"
            editorID="org.eclipse.cdt.ui.editor.CEditor">
      </editor>
   </extension>
   <extension
         point="de.cau.cs.kieler.klighd.ui.view.controller">
      <controller
            class="de.cau.cs.kieler.c.sccharts.controller.CDTUpdateController">
      </controller>
   </extension>
   <extension
         point="de.cau.cs.kieler.sccharts.klighd.hooks">
      <hook
            class="de.cau.cs.kieler.c.sccharts.synthesis.HideEntryKeywordHook">
      </hook>
   </extension>
   <extension
         point="de.cau.cs.kieler.kico.feature">
      <featureClass
            class="de.cau.cs.kieler.c.sccharts.transformation.TransitionFeature">
      </featureClass>
   </extension>
   <extension
         point="de.cau.cs.kieler.kico.transformation">
      <productionTransformationClass
            class="de.cau.cs.kieler.c.sccharts.transformation.ImmTransTransformation">
      </productionTransformationClass>
   </extension>
   <extension
         point="de.cau.cs.kieler.kico.ui.transformation">
      <editor
            editor="de.cau.cs.kieler.sccharts.text.sct.Sct"
            features="c.immediateTrans"
            label="ImmediateTransitions org.eclipse.cdt.ui.editor.CEditor"
            priority="101">
      </editor>
   </extension>>
</plugin>
