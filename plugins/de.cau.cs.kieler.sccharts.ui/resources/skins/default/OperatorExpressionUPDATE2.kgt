knode operator {
    size: width = 20 height = 20
    properties:
    org.eclipse.elk.portLabels.placement = INSIDE
    org.eclipse.elk.portConstraints = FIXED_ORDER

  krectangle [
    de.cau.cs.kieler.sccharts.ui.synthesis.style.sccharts = true
  ] {
        styles: lineStyle = solid
            
      kpolyline{
        gridData:
          topLeftAnchor=left 10%, top 10%
          bottomRightAnchor=right 13%, bottom 10%
        styles: lineWidth = 1
                foreground = 0r, 0g, 0b
        points: right 90%, top 40%;
                right 50%, top 60%;
                right 10%, top 40%
      }                      
            
  }

  kport in1 {
    size: width = 0 height = 0
    properties: org.eclipse.elk.port.side = WEST
        
    klabel "" { 
        ktext {
            styles: fontSize = 4pt
        }
    }
  }
  
  kport in2 {
    size: width = 0 height = 0
    properties: org.eclipse.elk.port.side = SOUTH
    
    klabel "var" { 
        ktext {
            styles: fontSize = 4pt
        }
    }
    
    krectangle {
      styles: 
      invisible = true
    }
  }
    
  kport in0 {
    pos: x = 6 y = 25
    size: width = 0 height = 0
    properties: org.eclipse.elk.port.side = NORTH
                org.eclipse.elk.port.borderOffset = 0.0
                org.eclipse.elk.layered.allowNonFlowPortsToSwitchSides = false
    
    klabel "set" {
        ktext {
          styles: fontSize = 3pt
        }
    }    
  }
  
  kport out {
    size: width = 2 height = 2
    properties:
    org.eclipse.elk.port.side = EAST
    
    klabel "" { 
        ktext {
            styles: fontSize = 4pt
        }
    }
  }    
      
}