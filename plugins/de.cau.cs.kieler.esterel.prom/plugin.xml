<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.newWizards">
      <wizard
            canFinishEarly="false"
            category="de.cau.cs.kieler.esterel"
            class="de.cau.cs.kieler.esterel.prom.EsterelFileWizard"
            finalPerspective="de.cau.cs.kieler.Modeling"
            hasPages="true"
            icon="icons/foerde-logo-16.png"
            id="de.cau.cs.kieler.esterel.prom.strlWizard"
            name="Esterel File"
            project="false">
         <description>
            Create a new Esterel file.
         </description>
      </wizard>
      <wizard
            category="de.cau.cs.kieler.esterel"
            class="de.cau.cs.kieler.esterel.prom.EsterelProjectWizard"
            finalPerspective="de.cau.cs.kieler.Modeling"
            hasPages="true"
            icon="icons/foerde-logo-16.png"
            id="de.cau.cs.kieler.esterel.prom.esterelProject"
            name="Esterel Project"
            project="true">
         <description>
            Create a new Esterel project.
         </description>
      </wizard>
   </extension>
   <extension
         point="org.eclipse.debug.ui.launchShortcuts">
      <shortcut
            class="de.cau.cs.kieler.prom.ui.launch.KiCoLaunchShortcut"
            icon="icons/foerde-logo-16.png"
            id="de.cau.cs.kieler.esterel.prom.launchShortcut"
            label="KiCo Compilation"
            modes="run, debug">
         <contextualLaunch>
            <enablement>
               <with
                     variable="selection">
                  <count
                        value="1">
                  </count>
                  <iterate>
                     <or>
                        <test
                              forcePluginActivation="false"
                              property="org.eclipse.debug.ui.matchesPattern"
                              value="*.strl">
                        </test>
                     </or>
                  </iterate>
               </with>
            </enablement>
         </contextualLaunch>
      </shortcut>
   </extension>
   <extension
         point="de.cau.cs.kieler.prom.wrapperCodeAnnotationAnalyzer">
      <analyzer
            class="de.cau.cs.kieler.esterel.prom.EsterelWrapperCodeAnnotationAnalyzer">
      </analyzer>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="de.cau.cs.kieler.Modeling">
         <newWizardShortcut
               id="de.cau.cs.kieler.esterel.prom.projectwizard">
         </newWizardShortcut>
         <newWizardShortcut
               id="de.cau.cs.kieler.esterel.prom.filewizard">
         </newWizardShortcut>
      </perspectiveExtension>
      <perspectiveExtension
            targetID="de.cau.cs.kieler.simulation">
         <newWizardShortcut
               id="de.cau.cs.kieler.esterel.prom.projectwizard">
         </newWizardShortcut>
         <newWizardShortcut
               id="de.cau.cs.kieler.esterel.prom.filewizard">
         </newWizardShortcut>
      </perspectiveExtension>
   </extension>
   <extension
         point="org.eclipse.ui.navigator.navigatorContent">
      <commonWizard
            type="new"
            wizardId="de.cau.cs.kieler.esterel.prom.strlWizard">
         <enablement></enablement>
      </commonWizard>
      <commonWizard
            type="new"
            wizardId="de.cau.cs.kieler.esterel.prom.esterelProject">
         <enablement></enablement>
      </commonWizard>
   </extension>

</plugin>
