cached Void RemoveUnnecessaryOutputPorts2(PortType port, EntityType modalModel) :
  if (IsOutputPortUnnecessary(port, modalModel.entity)) then
  	enqueue2Delete(modalModel, port.name)
;

cached Void RemoveUnnecessaryOutputPortsAddAbsent(PortType port, EntityType refinement) :
  let l = new LinkType:
  let portShouldBeRemoved = IsOutputPortUnnecessary(port, refinement.entity.select(e|e.class1.matches("ptolemy.domains.modal.modal.ModalModel"))) :
  if (portShouldBeRemoved) then
     ( 
       addAbsent(refinement) ->
       l.setRelation("AbsentRelation") ->
       l.setPort(port.name) ->
       if (refinement.link.select(e|e.port.matches(port.name) && e.relation.matches("AbsentRelation")).size < 1) then
       		refinement.link.add(l)
     )
 ;


