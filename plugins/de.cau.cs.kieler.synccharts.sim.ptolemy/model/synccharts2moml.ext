//Add an ABSENT actor and a relation with a link (within baseEntity).
//Only iff this actors does not already exist. 
Void addAbsent(EntityType baseEntity) :
   let e = new EntityType:
   let p1 = new PropertyType:
   let r = new RelationType:
   let p2 = new PropertyType:
   let l  = new LinkType:
   let v = new VertexType:
   
   e.setName("Absent") ->
   e.setClass1("ptolemy.domains.sr.lib.Absent") ->
     p1.setName("outputType") ->
     p1.setClass("ptolemy.kernel.util.StringAttribute") ->
     p1.setValue("int") ->
   e.property.add(p1) ->

   r.setName("AbsentRelation") ->
   r.setClass("ptolemy.actor.TypedIORelation") ->
     p2.setName("width") ->
     p2.setClass("ptolemy.data.expr.Parameter") ->
     p2.setValue("-1") ->
   r.property.add(p2) ->
  	 v.setName("AbsentVertex") ->
   	 v.setValue("{0.0, 0.0}") ->
   r.vertex.add(v) ->
  
   l.setPort("Absent.output") ->
   l.setRelation("AbsentRelation") ->
  
   //if not already exists
   if (baseEntity.entity.select(ee|ee.name.matches(e.name)).size == 0) then
	  ( 
	    baseEntity.relation.add(r) ->
	    baseEntity.entity.add(e) ->
	  	baseEntity.link.add(l)
	  )
;   
  

