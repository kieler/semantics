// Search a bunch of entities (maybe recursively) iff port is mentioned
boolean IsOutputPortUnnecessary(PortType port, List[EntityType] entityList) :
	let firstEntity              = entityList.first() :
	let isUnnecessaryOnThisLevel = IsOutputPortUnnecessary(port, firstEntity, null) :
	
	if (entityList.withoutFirst().size > 0) then
	   isUnnecessaryOnThisLevel && IsOutputPortUnnecessary(port, entityList.withoutFirst())
	else
	   isUnnecessaryOnThisLevel
;

// Case statement and recursive closure for this search
boolean IsOutputPortUnnecessary(PortType port, EntityType entity, EntityType modalModel) :
        let entityClass = entity.class1:
	switch {
	  case (entityClass.matches("ptolemy.domains.modal.modal.ModalModel")) :
			// if this is a region, go on with modal controller (typically there is just one per region)
			// modalModel.entity.select(e|e.name.matches("_Controller")).first()
		    IsOutputPortUnnecessary(port, entity.entity)
	  case (entityClass.matches("ptolemy.domains.modal.modal.ModalController") ): // && (modalModel != null)) :
	  		// test this (output) port for this controller
	  		IsOutputPortUnnecessaryController(port, entity)
	  case (entityClass.matches("ptolemy.domains.modal.modal.Refinement")) :
	        // do this recursively in all hierachy levels
            (
              RemoveUnnecessaryOutputPortsAddAbsent(port, entity) ->
              IsOutputPortUnnecessary(port, entity.entity)
            )
	  default :
	    	true
	} 
;

// Search in all controller's transitions, iff there exists an ouputAction containing the port
// return true in this case. Return false iff no such transition can be found
boolean IsOutputPortUnnecessaryController(PortType port, EntityType controller) :
	let list = controller.relation.select(p|(p.property.select(pp|pp.name.matches("outputActions") && pp.value.contains(port.name)).size > 0) ):
	(list.size == 0) //unnecessary iff port not refered 
;
