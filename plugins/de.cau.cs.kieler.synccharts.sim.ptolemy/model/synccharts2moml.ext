Void RemoveUnnecessaryCombineActors(List[EntityType] entityList ):
	let firstEntity = entityList.first():
	(firstEntity.class1.matches("ptolemy.domains.sr.lib.Combine")) ?
		RemoveUnnecessaryCombineActors_SRCombine(firstEntity) : null ->
	(firstEntity.class1.matches("ptolemy.domains.modal.modal.ModalModel")) ? 
		RemoveUnnecessaryCombineActors_ModalModel(firstEntity,
										        firstEntity.entity) : null ->
	(entityList.size > 1) ?
		RemoveUnnecessaryCombineActors(entityList.withoutFirst()) : null
;

// Only do this if inputs < 2 and outputs > 0 (so dont optimize REAL output interface combine actors)
Void RemoveUnnecessaryCombineActors_SRCombine(EntityType SRCombine):
	let inputs = RemoveUnnecessaryCombineActors_CountInputs(((EntityType)SRCombine.eContainer).link, SRCombine):
	let outputs = RemoveUnnecessaryCombineActors_CountOutputs(((EntityType)SRCombine.eContainer).link, SRCombine):
	dump("----------->" + inputs) ->
	// Add Links
	if (inputs < 2) && (outputs > 0) then
	 RemoveUnnecessaryCombineActors_AddLink(((EntityType)SRCombine.eContainer).link, SRCombine) ->
	// Remove Links
	if (inputs < 2) && (outputs > 0) then
	  RemoveUnnecessaryCombineActors_RemoveLink(((EntityType)SRCombine.eContainer).link, SRCombine) ->
    // Remove Combine Actor
	if (inputs < 2) && (outputs > 0) then
	  ((EntityType)SRCombine.eContainer).entity.remove(SRCombine)
;											 

Void RemoveUnnecessaryCombineActors_AddLink(List[LinkType] linkList, EntityType SRCombine) :
   let src = RemoveUnnecessaryCombineActors_GetLinkSource(((EntityType)SRCombine.eContainer).link, SRCombine) :
   let dst = RemoveUnnecessaryCombineActors_GetLinkDest(((EntityType)SRCombine.eContainer).link, SRCombine) :
   let containerEntity = (EntityType)SRCombine.eContainer:
   let linkEntity = new LinkType:
   containerEntity.link.add(linkEntity) ->
   linkEntity.setRelation1(src) ->
   linkEntity.setRelation2(dst)
;

Void RemoveUnnecessaryCombineActors_RemoveLink(List[LinkType] linkList, EntityType SRCombine) :
   let firstLink = linkList.first():
   let containerEntity = (EntityType)SRCombine.eContainer:
   
   if (firstLink.port.startsWith(SRCombine.name)) then
      containerEntity.link.remove(firstLink) ->
   
   (linkList.size > 1) ?
		RemoveUnnecessaryCombineActors_RemoveLink(linkList.withoutFirst(), SRCombine) 
		: null
;


