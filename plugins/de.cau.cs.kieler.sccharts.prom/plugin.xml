<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.newWizards">
      <wizard
            canFinishEarly="false"
            category="de.cau.cs.kieler.sccharts"
            class="de.cau.cs.kieler.sccharts.prom.SCChartsFileWizard"
            finalPerspective="de.cau.cs.kieler.Modeling"
            hasPages="true"
            icon="icons/foerde-logo-16.png"
            id="de.cau.cs.kieler.sccharts.prom.filewizard"
            name="SCT File"
            project="false">
         <description>
            Create a new SCT file.
         </description>
      </wizard>
      <wizard
            category="de.cau.cs.kieler.sccharts"
            class="de.cau.cs.kieler.sccharts.prom.SCChartsProjectWizard"
            finalPerspective="de.cau.cs.kieler.Modeling"
            hasPages="true"
            icon="icons/foerde-logo-16.png"
            id="de.cau.cs.kieler.sccharts.prom.projectwizard"
            name="SCT Project"
            project="true">
         <description>
            Create a new SCCharts project.
         </description>
      </wizard>
   </extension>
   <extension
         point="org.eclipse.debug.ui.launchShortcuts">
      <shortcut
            class="de.cau.cs.kieler.prom.launchconfig.LaunchShortcut"
            icon="icons/foerde-logo-16.png"
            id="de.cau.cs.kieler.sccharts.prom.launchShortcut"
            label="SCT Application"
            modes="run, debug">
         <contextualLaunch>
            <enablement>
               <with
                     variable="selection">
                  <count
                        value="1">
                  </count>
                  <iterate>
                     <or>
                        <test
                              forcePluginActivation="false"
                              property="org.eclipse.debug.ui.matchesPattern"
                              value="*.sct">
                        </test>
                     </or>
                  </iterate>
               </with>
            </enablement>
         </contextualLaunch>
      </shortcut>
   </extension>
   <extension
         point="de.cau.cs.kieler.prom.environmentInitializer">
      <initializer
            class="de.cau.cs.kieler.sccharts.prom.SCChartsEnvironmentInitializer">
      </initializer>
   </extension>
   <extension
         point="de.cau.cs.kieler.kex">
      <category
            id="de.cau.cs.kieler.sccharts.prom.examples"
            title="SCCharts">
      </category>
      <example
            author="KIELER Workgroup"
            category="de.cau.cs.kieler.sccharts.prom.examples"
            contact="kieler@informatik.uni-kiel.de"
            description="Example project with wrapper code from annotations which compiles and deploys to LEGO Mindstorms with leJOS NXT"
            generation_date="folks_this_field_is_user_input_idenpendent"
            id="de.cau.cs.kieler.sccharts.prom.examples.mindstorms.nxj"
            overview_pic="examples/nxj_project/image.png"
            root_directory="examples/nxj_project/"
            title="SCCharts for leJOS NXT">
         <resource
               direct_open="false"
               local_path="examples/nxj_project/src/"
               resource_type="folder">
         </resource>
         <resource
               direct_open="false"
               local_path="examples/nxj_project/sct-gen/"
               resource_type="folder">
         </resource>
         <resource
               direct_open="false"
               local_path="examples/nxj_project/snippets/"
               resource_type="folder">
         </resource>
         <resource
               direct_open="false"
               local_path="examples/nxj_project/snippets/mindstorms_nxj/"
               resource_type="folder">
         </resource>
         <resource
               direct_open="false"
               local_path="examples/nxj_project/sct-gen/Main.java"
               resource_type="file">
         </resource>
         <resource
               direct_open="false"
               local_path="examples/nxj_project/sct-gen/Model.java"
               resource_type="file">
         </resource>
         <resource
               direct_open="false"
               local_path="examples/nxj_project/snippets/mindstorms_nxj/snippets.ftl"
               resource_type="file">
         </resource>
         <resource
               direct_open="false"
               local_path="examples/nxj_project/src/Main.ftl"
               resource_type="file">
         </resource>
         <resource
               direct_open="false"
               local_path="examples/nxj_project/src/Model.sct"
               resource_type="file">
         </resource>
      </example>
   </extension>
   <extension
         point="de.cau.cs.kieler.prom.wrapperCodeAnnotationAnalyzer">
      <analyzer
            class="de.cau.cs.kieler.sccharts.prom.SCTWrapperCodeAnnotationAnalyzer">
      </analyzer>
   </extension>

</plugin>
