scchart DVDPlayer2 "DVDPlayer" {
  input signal POWER;
  input signal PLAY;
  output signal O;

  initial state Off
  --> On with POWER;

  state On {

    initial state H {

      initial state English
      --> French with / O;

      state German
      --> English with / O;

      state French
      --> German with / O;

      region:

      initial state PAUSE
      --> Playing with PLAY;

      state Playing
      --> PAUSE with PLAY
      --> S;

      final state S;
    };
  }
  --> Off with POWER;
}