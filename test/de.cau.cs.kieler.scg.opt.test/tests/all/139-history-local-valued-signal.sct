scchart _139_history_local_signal "139-history-local-signal" {
  input signal I;
  input signal R;
  output signal int O;
  input signal H;

  initial state H {
    signal int V = 0;

    initial state A
    --> B with I / V(1)
    --> A with / O(val(V));

    state B
    --> A with I / V(2)
    --> B with / O(val(V));
  }
  o-> P with R;

  state P
  --> H with R
  --> H history with H;
}