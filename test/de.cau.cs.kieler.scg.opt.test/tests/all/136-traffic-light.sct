scchart TRAFFIC_LIGHT {
  input signal Error;
  input signal Ok;
  input signal Sec;
  signal Pgo;
  signal Pstop;
  output signal PG;
  output signal PR;
  output signal CG;
  output signal CR;
  output signal CY;

  region _R0:

  initial state Normal {

    region Pedestrian:

    initial state Pred
    --> Pgreen with Pgo;

    state Pgreen
    --> Pred with Pstop;

    region Car:

    state Cgreen
    --> Cyellow1 with 5 Sec / Pgo;

    state Cyellow1 "Cyellow"
    --> Cred2 with Sec;

    initial state Cred2 "Cred"
    --> Cyellow with 3 Sec;

    state Cyellow
    --> Cgreen with Sec / Pstop;
  }
  o-> Error with Error;

  state Error {

    region Pedestrian:

    initial state Pred;

    region Car:

    state Cyellow_on
    --> Cyellow_off with Sec;

    initial state Cyellow_off
    --> Cyellow_on with Sec;
  }
  o-> Normal with Ok;
}