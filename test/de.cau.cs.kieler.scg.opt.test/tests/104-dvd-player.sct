scchart DVDPlayer {
  input signal POWER;
  input signal EJECT;
  input signal PLAY;
  input signal STOP;
  input signal AUDIO;
  output signal off;
  output signal openedtray;
  output signal on;
  output signal closedtray;
  output signal pause;
  output signal playing;
  output signal stop;
  output signal english;
  output signal german;
  output signal french;

  region _R0:

  initial state Off
  --> On with POWER;

  state On {

    region _R0:

    initial state OpenedTray
    --> ClosedTray immediate with EJECT;

    state ClosedTray {

      region _R0:

      initial state PAUSE
      --> Playing with PLAY;

      state Playing
      --> Stop with STOP
      --> PAUSE with PLAY;

      final state Stop
      --> Playing with PLAY;

      region _R1:

      initial state English
      --> German immediate with AUDIO;

      state German
      --> French with AUDIO;

      state French
      --> English with AUDIO;
    }
    o-> OpenedTray with EJECT;
  }
  o-> Off with POWER;
}