scchart ABRO {
  input signal pure A;
  input signal pure B;
  input signal pure R;
  output signal pure O;

  region R0:

  initial state ABO {

    region R0:

    initial state WaitAB {

      region R0:

      initial state wA
      --> dA with A;

      final state dA;

      region R1:

      initial state wB
      --> dB with B;

      final state dB;
    }
    >-> done / O;

    state done;
  }
  o-> ABO with R;
}