scchart instcommhiearchy {
  signal pure L1;
  signal pure L2;
  signal pure L3;
  input signal pure I;
  output signal pure O;

  initial state ABC {

    initial state A
    --> BC with I / L1;

    state BC {

      initial state B
      --> C immediate with L2 / L3;

      state C;
    };
  };

  region:

  initial state X
  --> YZ immediate with L1 / L2;

  state YZ {

    initial state Y
    --> Z immediate with L3 / O;

    state Z;
  };
}