@diagram[KLayLayered] false  
scchart SignalMulti {
  output signal S1;
  output signal S2;
  output signal S3;
  output bool A1 = false;
  output bool A2 = false;
  
  region R1:

  initial state S1
  --> S2 with / S1; S2; S3; A1 = true;

  state S2;

  region R2:

  initial state S3
  --> S4 with S1 & S2 & S3 / A2 = true;

  state S4;
}