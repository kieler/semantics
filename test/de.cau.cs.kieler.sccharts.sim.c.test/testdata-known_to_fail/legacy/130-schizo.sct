scchart Schizo {
  output signal pure Son;
  output signal pure Soff;

  region _R0:

  initial state S {
    signal pure S;

    region _R0:

    initial state S
    --> S1 immediate with S / Son
    --> S1 immediate with !S / Soff;

    state S1
    --> S2 / S;

    state S2
    --> S3 immediate with S / Son
    --> S3 immediate with !S / Soff;

    final state S3;
  }
  >-> S;
}